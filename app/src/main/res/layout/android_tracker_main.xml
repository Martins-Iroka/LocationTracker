<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:text="New Location"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/place"
            android:layout_marginTop="50dp"/>

    <Button
            android:text="@string/start_tracker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_stop_tracker"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:padding="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/location"/>

    <Button
            android:text="@string/locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_history"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/start_stop_tracker"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:padding="20dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_place_black_24dp"
            android:id="@+id/place"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/poi"/>

</androidx.constraintlayout.widget.ConstraintLayout>